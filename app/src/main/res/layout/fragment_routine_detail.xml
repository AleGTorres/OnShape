<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/detail_routine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome da Rotina"
        android:textAppearance="?attr/textAppearanceHeadline5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ExercÃ­cios:"
        android:textAppearance="?attr/textAppearanceTitleMedium" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_detail_exercises"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/button_start_workout_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Treino" />

    <Button
        android:id="@+id/button_delete_routine"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Excluir Rotina"
        android:textColor="@android:color/holo_red_light" />

</LinearLayout>